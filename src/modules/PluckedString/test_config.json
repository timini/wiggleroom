{
  "module_type": "instrument",
  "description": "Karplus-Strong plucked string physical model",
  "quality_thresholds": {
    "thd_max_percent": 15.0,
    "clipping_max_percent": 1.0,
    "hnr_min_db": 10.0,
    "allow_hot_signal": false
  },
  "test_scenarios": [
    {
      "name": "default",
      "duration": 3.0,
      "description": "Default plucked string"
    },
    {
      "name": "damped",
      "duration": 2.0,
      "parameters": {
        "damp": 0.8
      },
      "description": "Heavily damped string"
    }
  ],
  "parameter_sweeps": {
    "exclude": ["gate", "trigger", "volts"],
    "steps": 10
  }
}
