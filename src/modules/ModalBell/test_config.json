      "description": "Wood block - hollow, inharmonic, short decay"
    },
    {
      "name": "marimba",
      "duration": 3.0,
      "parameters": {
        "morph": 0.25,
        "brightness": 0.4,
        "velocity": 0.7,
        "strike": 0.3
      },
      "description": "Marimba - warm wood, harmonic 1:4 ratio"
    },
    {
      "name": "vibraphone",
      "duration": 4.0,
      "parameters": {
        "morph": 0.5,
        "brightness": 0.6,
        "damping": 0.0,
        "velocity": 0.8
      },
      "description": "Vibraphone - singing metal, long sustain"
    },
    {
      "name": "kalimba",
      "duration": 3.0,
      "parameters": {
        "morph": 0.75,
        "brightness": 0.7,
        "velocity": 0.85,
        "strike": 0.25
      },
      "description": "Kalimba - anharmonic buzz, clamped tine"
    },
    {
      "name": "glockenspiel",
      "duration": 4.0,
      "parameters": {
        "morph": 1.0,
        "brightness": 0.9,
        "velocity": 1.0,
        "strike": 0.4
      },
      "description": "Glockenspiel - piercing steel, long ring"
    },
    {
      "name": "damped_bell",
      "duration": 2.0,
      "parameters": {
        "morph": 0.5,
        "damping": 0.8,
        "brightness": 0.6
      },
      "description": "Choked vibraphone - damped quickly"
    }
  ],
